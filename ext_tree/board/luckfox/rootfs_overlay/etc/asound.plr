ctl.!default {
  type hw
    card 0
    }
    
pcm.!default {
type plug
    slave {
    pcm "dup"
    channels 2
    }
}

pcm.dup {
type route
    slave {
    pcm "hw:0,0"
    channels 4
    }
    ttable.0.0 -1;
    ttable.0.1 1;
    ttable.1.2 -1;
    ttable.1.3 1;
}

                                
